<project name="SurvivalStory" default="run" ><!-- VARIABLES -->	<property name="packageDir" value="/com/zstoryproject"/>	<property name="main-class"  value="com.zstoryproject.StartGame"/>		<property name="lib.dir"     value="lib"/>    <property name="classes.dir" value="bin"/>	<property name="build.dir"   value="build"/>	<property name="jar.dir"     value="${build.dir}/jar"/><!-- PATH -->	<path id="classpath">        <fileset dir="${lib.dir}" includes="**/*.jar"/>	</path><!-- TARGETS -->	<!-- CLEAN -->	<target name="clean">        <delete dir="${build.dir}"/>    </target>		<!-- COMPILE -->	<target name="compile" description="compile java">		<javac destdir="bin/" includeantruntime="false" classpathref="classpath">			<src path="src/${packageDir}"/>		</javac>	</target>		<!-- ARCHIVE JAR -->	<target name="jar" depends="compile">        <mkdir dir="${jar.dir}"/>        <jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">            <manifest>                <attribute name="Main-Class" value="${main-class}"/>            </manifest>        </jar>	</target>	<!-- RUN JAR -->	<target name="run" description="run java" depends="jar">		<java fork="true" classname="${main-class}">			<jvmarg value="-Djava.library.path=${lib.dir}/native/macosx"/>			<classpath>				<path refid="classpath"/>				<path location="${jar.dir}/${ant.project.name}.jar"/>			</classpath>		</java>	</target></project>